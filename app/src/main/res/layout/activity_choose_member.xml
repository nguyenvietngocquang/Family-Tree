<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC99"
    android:backgroundTintMode="screen"
    tools:context=".view_tree.ChooseMemberActivity">

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="You need to choose a member to view family tree of this member:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <AutoCompleteTextView
        android:id="@+id/et_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_choose"
        android:layout_marginHorizontal="30dp"
        android:completionThreshold="1"
        android:hint="Enter the member's name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_choose"
        android:layout_marginVertical="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_choose_apply"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/other_button"
            android:gravity="center"
            android:text="Apply"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_choose_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/other_button"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>