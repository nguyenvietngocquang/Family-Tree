<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night"
    android:gravity="center"
    tools:context=".random_member.RandomMemberActivity">

    <TextView
        android:id="@+id/tv_random_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="#FFCC00"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_random_gender"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_random_name"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp" />

    <TextView
        android:id="@+id/tv_random_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_random_gender"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/crete_round"
        android:gravity="center"
        android:textColor="#FFCC00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_random_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_random_age"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/crete_round"
        android:gravity="center"
        android:textColor="#FFCC00"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_random_birthday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_random_view"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/other_button"
            android:gravity="center"
            android:text="View Tree"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_random_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/other_button"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>