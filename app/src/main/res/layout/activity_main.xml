<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_family_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:text="FAMILY TREE"
        android:textColor="#FFFF00"
        android:textSize="45sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_family_tree"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_below="@+id/tv_family_tree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/family_tree" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_family_tree"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_add"
                android:padding="10dp"
                android:text="Add\nMember"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_list"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_list"
                android:padding="10dp"
                android:text="List\nMember"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_tree"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_tree"
                android:padding="10dp"
                android:text="View\nTree"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_notifi"
                android:padding="10dp"
                android:text="Notifi\ncation"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_random"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_random"
                android:padding="10dp"
                android:text="Random\nMember"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_about"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/main_button"
                android:drawableStart="@drawable/btn_about"
                android:padding="10dp"
                android:text="About"
                android:textAllCaps="false"
                android:textColor="#990066"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>